{
    "mode": "all",
    "parameters": {
        "NatRanges": {
            "type": "array",
            "metadata": {
                "description": "The list of NAT pool ranges for PUBLIC subscriptions that must be added when an NSG denies access to specific IPs or subnets",
                "displayName": "Required NAT ranges"
            },
            "defaultValue": [
                "167.220.0.0/23","167.220.2.0/24"
            ]
        }
    },
    "displayName": "Audit NSGs for current NAT pool ranges (PUBLIC subs)",
    "description": "This policy audits NSGs in public subscriptions for current NAT pool ranges from MLS Ops.",
    "policyRule": {
        "if": {
            "anyOf": [
                {
                    "allOf": [
                        {
                            "field": "type",
                            "equals": "Microsoft.Network/networkSecurityGroups"
                        },
                        {
                            "field": "Microsoft.Network/networkSecurityGroups[*].securityRules[*].properties.destinationPortRange",
                            "equals": "3389"
                        },
                        {
                            "not": [
                            {
                                "field": "Microsoft.Network/networkSecurityGroups[*].securityRules[*].properties.sourceAddressPrefix",
                                "equals": "[parameters('NatRanges')]"
                            },
                            {
                                "field": "Microsoft.Network/networkSecurityGroups[*].securityRules[*].properties.sourceAddressPrefix",
                                "equals": "*"
                            }
                            ]
                        }
                    ]
                }
            ]
        },
        "then": {
            "effect": "audit"
        }
    }
}