{
    "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "vnetName": {
            "type": "string",
            "metadata": {
                "description": "Name of the existing virtual network"
            }
        },
        "vnetLocation": {
            "type": "string",
            "metadata": {
                "description": "Location of the existing virtual network. i.e. westus2"
            }
        },
        "subnetName": {
            "type": "string",
            "metadata": {
                "description": "Name of the existing subnet"
            }
        },
        "otherIps": {
            "type": "array",
            "defaultValue": [
                "71.231.66.104"
            ],
            "metadata": {
                "description": "Enter additional IPs or subnets to permit (i.e. '10.10.10.1', '10.10.10.0/24', '10.10.10.1,10.10.10.2')"
            }
        },
        "_artifactsLocation": {
          "type": "string",
          "metadata": {
            "description": "The base URI where artifacts required by this template are located"
          },
          "defaultValue": "https://raw.githubusercontent.com/oualabadmins/lab_deploy/master/new-nsg-lockdown/"
        }
    },
    "variables": {
        "corpnetSubnets": [
            "131.107.0.0/16",
            "167.220.0.0/23",
            "167.220.100.0/22",
            "167.220.104.0/23",
            "167.220.56.0/21",
            "167.220.98.0/23"
        ],
        "nsgName": "corpnet-lockdown"
    },
    "resources": [
        {
            "apiVersion": "2018-01-01",
            "type": "Microsoft.Network/networkSecurityGroups",
            "name": "[variables('nsgName')]",
            "location": "[parameters('vnetLocation')]",
            "tags": {
                "displayName": "NSG - Corpnet subnets"
            },
            "comments": "This network security group permits traffic only from corpnet subnets and optionally private IPs.",
            "properties": {}
        },
        {
            "name": "[concat(variables('nsgName'),'/ssh-corpnet')]",
            "apiVersion": "2018-01-01",
            "type": "Microsoft.Network/networkSecurityGroups/securityRules",
            "dependsOn": [
                "[variables('nsgName')]"
            ],
            "properties": {
                "description": "Allow SSH inbound",
                "protocol": "Tcp",
                "sourcePortRange": "*",
                "destinationPortRange": "22",
                "sourcePortRanges": [],
                "sourceAddressPrefixes": "[variables('corpnetSubnets')]",
                "destinationAddressPrefix": "*",
                "access": "Allow",
                "priority": 120,
                "direction": "Inbound"
            }
        },
        {
            "name": "[concat(variables('nsgName'),'/rdp-corpnet')]",
            "apiVersion": "2018-01-01",
            "type": "Microsoft.Network/networkSecurityGroups/securityRules",
            "dependsOn": [
                "[variables('nsgName')]"
            ],
            "properties": {
                "description": "Allow RDP inbound",
                "protocol": "Tcp",
                "sourcePortRange": "*",
                "destinationPortRange": "3389",
                "sourcePortRanges": [],
                "sourceAddressPrefixes": "[variables('corpnetSubnets')]",
                "destinationAddressPrefix": "*",
                "access": "Allow",
                "priority": 121,
                "direction": "Inbound"
            }
        },
        {
            "name": "[concat(variables('nsgName'),'/powershell-remoting-corpnet')]",
            "apiVersion": "2018-01-01",
            "type": "Microsoft.Network/networkSecurityGroups/securityRules",
            "dependsOn": [
                "[variables('nsgName')]"
            ],
            "properties": {
                "description": "Allow PowerShell remoting inbound",
                "protocol": "Tcp",
                "sourcePortRange": "*",
                "destinationPortRange": "5985-5986",
                "sourcePortRanges": [],
                "sourceAddressPrefixes": "[variables('corpnetSubnets')]",
                "destinationAddressPrefix": "*",
                "access": "Allow",
                "priority": 122,
                "direction": "Inbound"
            }
        },
        {
            "name": "[concat(variables('nsgName'),'/ssh-custom')]",
            "condition": "[not(empty(parameters('otherIps')))]",
            "apiVersion": "2018-01-01",
            "type": "Microsoft.Network/networkSecurityGroups/securityRules",
            "dependsOn": [
                "[variables('nsgName')]"
            ],
            "properties": {
                "description": "Allow SSH inbound",
                "protocol": "Tcp",
                "sourcePortRange": "*",
                "destinationPortRange": "22",
                "sourcePortRanges": [],
                "sourceAddressPrefixes": "[parameters('otherIps')]",
                "destinationAddressPrefix": "*",
                "access": "Allow",
                "priority": 123,
                "direction": "Inbound"
            }
        },
        {
            "name": "[concat(variables('nsgName'),'/rdp-custom')]",
            "condition": "[not(empty(parameters('otherIps')))]",
            "apiVersion": "2018-01-01",
            "type": "Microsoft.Network/networkSecurityGroups/securityRules",
            "dependsOn": [
                "[variables('nsgName')]"
            ],
            "properties": {
                "description": "Allow RDP inbound",
                "protocol": "Tcp",
                "sourcePortRange": "*",
                "destinationPortRange": "3389",
                "sourcePortRanges": [],
                "sourceAddressPrefixes": "[parameters('otherIps')]",
                "destinationAddressPrefix": "*",
                "access": "Allow",
                "priority": 124,
                "direction": "Inbound"
            }
        },
        {
            "name": "[concat(variables('nsgName'),'/powershell-remoting-custom')]",
            "condition": "[not(empty(parameters('otherIps')))]",
            "apiVersion": "2018-01-01",
            "type": "Microsoft.Network/networkSecurityGroups/securityRules",
            "dependsOn": [
                "[variables('nsgName')]"
            ],
            "properties": {
                "description": "Allow PowerShell remoting inbound",
                "protocol": "Tcp",
                "sourcePortRange": "*",
                "destinationPortRange": "5985-5986",
                "sourcePortRanges": [],
                "sourceAddressPrefixes": "[parameters('otherIps')]",
                "destinationAddressPrefix": "*",
                "access": "Allow",
                "priority": 125,
                "direction": "Inbound"
            }
        },
        {
            "apiVersion": "2017-08-01",
            "name": "deploy",
            "type": "Microsoft.Resources/deployments",
            "resourceGroup": "[resourceGroup().name]",
            "dependsOn": [
                "[variables('nsgName')]"
            ],
            "properties": {
                "mode": "Incremental",
                "templateLink": {
                    "uri": "[concat(parameters('_artifactsLocation'), concat('nested/updateSubnet.json'))]",
                    "contentVersion": "1.0.0.0"
                },
                "parameters": {
                    "vnetName": {
                        "value": "[parameters('vnetName')]"
                    },
                    "vnetLocation": {
                        "value": "[parameters('vnetLocation')]"
                    },
                    "subnetName": {
                        "value": "[parameters('subnetName')]"
                    },
                    "subnetAddressPrefix": {
                        "value": "[reference(resourceId(resourceGroup().name, 'Microsoft.Network/virtualNetworks/subnets', parameters('vnetName'), parameters('subnetName')), '2018-03-01').addressPrefix]"
                    },
                    "nsgId": {
                        "value": "[resourceId('Microsoft.Network/networkSecurityGroups', variables('nsgName'))]"
                    }
                }
            }
        }
    ],
    "outputs": {}
}